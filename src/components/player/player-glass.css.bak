/* ═══════════════════════════════════════════════════════════════
   PLAYER CARD - Liquid Glass Design
   Premium glassmorphic card with organic light behavior
   ═══════════════════════════════════════════════════════════════ */

.player-glass {
  --player-accent: #CF081F;

  position: relative;
  width: 240px;
  padding: 16px 18px;
  border-radius: 18px;
  cursor: pointer;
  overflow: hidden;
  transform: translateY(0);
  transition:
    transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1),
    box-shadow 0.4s ease;
}

/* Base glass background */
.player-glass-bg {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.1) 0%,
    rgba(255, 255, 255, 0.03) 50%,
    rgba(255, 255, 255, 0.06) 100%
  );
  backdrop-filter: blur(40px) saturate(180%);
  -webkit-backdrop-filter: blur(40px) saturate(180%);
  border-radius: inherit;
}

/* Glass surface with border */
.player-glass-surface {
  position: absolute;
  inset: 0;
  border-radius: inherit;
  border: 1px solid rgba(255, 255, 255, 0.15);
  box-shadow:
    0 0 0 1px rgba(255, 255, 255, 0.05) inset,
    0 8px 32px -8px rgba(0, 0, 0, 0.5),
    0 0 60px -20px rgba(255, 255, 255, 0.1);
  transition: all 0.4s ease;
}

.player-glass--hover .player-glass-surface {
  border-color: rgba(255, 255, 255, 0.25);
  box-shadow:
    0 0 0 1px rgba(255, 255, 255, 0.08) inset,
    0 20px 50px -10px rgba(0, 0, 0, 0.6),
    0 0 80px -20px rgba(255, 255, 255, 0.15),
    0 0 40px -10px var(--player-accent);
}

/* Team accent glow on left edge */
.player-glass-accent {
  position: absolute;
  left: 0;
  top: 16px;
  bottom: 16px;
  width: 3px;
  background: linear-gradient(
    180deg,
    transparent 0%,
    var(--player-accent) 20%,
    var(--player-accent) 80%,
    transparent 100%
  );
  border-radius: 0 3px 3px 0;
  opacity: 0.8;
  box-shadow: 0 0 20px var(--player-accent);
  transition: all 0.4s ease;
}

.player-glass--hover .player-glass-accent {
  opacity: 1;
  width: 4px;
  box-shadow:
    0 0 30px var(--player-accent),
    0 0 60px var(--player-accent);
}

/* Top highlight - simulates light from above */
.player-glass-highlight {
  position: absolute;
  top: 0;
  left: 10%;
  right: 10%;
  height: 1px;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.4) 30%,
    rgba(255, 255, 255, 0.6) 50%,
    rgba(255, 255, 255, 0.4) 70%,
    transparent 100%
  );
  opacity: 0.6;
  transition: opacity 0.3s ease;
}

.player-glass--hover .player-glass-highlight {
  opacity: 1;
}

/* Shimmer effect that sweeps across on hover */
.player-glass-shimmer {
  position: absolute;
  top: 0;
  left: -150%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    105deg,
    transparent 20%,
    rgba(255, 255, 255, 0.1) 40%,
    rgba(255, 255, 255, 0.2) 50%,
    rgba(255, 255, 255, 0.1) 60%,
    transparent 80%
  );
  transition: left 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  pointer-events: none;
}

.player-glass--hover .player-glass-shimmer {
  left: 150%;
}

/* Hover state */
.player-glass--hover {
  transform: translateY(-6px);
}

/* Content layout */
.player-glass-content {
  position: relative;
  display: flex;
  align-items: center;
  gap: 14px;
}

/* Avatar */
.player-avatar {
  position: relative;
  width: 42px;
  height: 42px;
  flex-shrink: 0;
}

.player-avatar-bg {
  position: absolute;
  inset: 0;
  border-radius: 12px;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.15) 0%,
    rgba(255, 255, 255, 0.05) 100%
  );
  box-shadow:
    inset 0 1px 2px rgba(255, 255, 255, 0.2),
    inset 0 -1px 2px rgba(0, 0, 0, 0.1);
}

.player-avatar-letter {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 17px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: -0.02em;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

.player-avatar-ring {
  position: absolute;
  inset: -3px;
  border-radius: 14px;
  border: 2px solid var(--player-accent);
  opacity: 0.4;
  transition: all 0.4s ease;
}

.player-glass--hover .player-avatar-ring {
  opacity: 0.8;
  box-shadow: 0 0 16px var(--player-accent);
}

/* Info section */
.player-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 3px;
}

.player-name {
  font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 14px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.95);
  letter-spacing: -0.01em;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

.player-meta {
  display: flex;
  align-items: center;
  gap: 8px;
  font-family: 'SF Pro Text', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 11px;
}

.player-number {
  font-weight: 600;
  color: var(--player-accent);
  text-shadow: 0 0 12px var(--player-accent);
}

.player-role {
  font-weight: 500;
  color: rgba(255, 255, 255, 0.5);
  text-transform: uppercase;
  letter-spacing: 0.08em;
}

/* Stat display */
.player-stat {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 2px;
  padding-left: 14px;
  border-left: 1px solid rgba(255, 255, 255, 0.1);
}

.player-stat-value {
  font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 20px;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.95);
  line-height: 1;
  letter-spacing: -0.02em;
  font-variant-numeric: tabular-nums;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.player-stat-label {
  font-family: 'SF Pro Text', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 9px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.4);
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

/* POV Button */
.player-pov {
  position: absolute;
  top: 50%;
  right: -48px;
  transform: translateY(-50%);
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  border-radius: 50%;
  color: rgba(255, 255, 255, 0.8);
  cursor: pointer;
  opacity: 0;
  overflow: hidden;
  transition:
    right 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
    opacity 0.3s ease,
    transform 0.3s ease;
}

.player-pov-bg {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.15) 0%,
    rgba(255, 255, 255, 0.05) 100%
  );
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: inherit;
  transition: all 0.3s ease;
}

.player-pov svg {
  position: relative;
  width: 18px;
  height: 18px;
  transition: transform 0.3s ease;
}

.player-glass--hover .player-pov {
  right: 18px;
  opacity: 1;
}

.player-pov:hover {
  transform: translateY(-50%) scale(1.1);
}

.player-pov:hover .player-pov-bg {
  background: linear-gradient(
    135deg,
    var(--player-accent) 0%,
    color-mix(in srgb, var(--player-accent) 80%, black) 100%
  );
  border-color: var(--player-accent);
  box-shadow: 0 0 24px var(--player-accent);
}

.player-pov:hover svg {
  transform: scale(1.1);
  color: white;
}

.player-pov:active {
  transform: translateY(-50%) scale(0.95);
}

/* ═══════════════════════════════════════════════════════════════
   POV VIDEO OVERLAY - Expanded liquid glass panel
   ═══════════════════════════════════════════════════════════════ */

.pov-glass {
  position: fixed;
  bottom: 28px;
  right: 28px;
  z-index: 200;
  animation: povSlideIn 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
}

@keyframes povSlideIn {
  from {
    opacity: 0;
    transform: translateY(30px) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.pov-glass-container {
  position: relative;
  width: 400px;
  border-radius: 24px;
  overflow: hidden;
}

/* Glass background layer */
.pov-glass-bg {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    135deg,
    rgba(15, 15, 20, 0.9) 0%,
    rgba(5, 5, 10, 0.95) 100%
  );
  backdrop-filter: blur(60px) saturate(200%);
  -webkit-backdrop-filter: blur(60px) saturate(200%);
}

/* Glass surface */
.pov-glass-surface {
  position: absolute;
  inset: 0;
  border: 1px solid rgba(255, 255, 255, 0.12);
  border-radius: inherit;
  box-shadow:
    0 0 0 1px rgba(255, 255, 255, 0.05) inset,
    0 1px 0 rgba(255, 255, 255, 0.15) inset,
    0 30px 60px -15px rgba(0, 0, 0, 0.7),
    0 0 100px -30px rgba(255, 255, 255, 0.1);
}

/* Top accent glow */
.pov-glass-glow {
  position: absolute;
  top: 0;
  left: 20%;
  right: 20%;
  height: 1px;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.5) 50%,
    transparent 100%
  );
  box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
}

/* Header */
.pov-header {
  position: relative;
  display: flex;
  align-items: center;
  gap: 14px;
  padding: 18px 20px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.08);
}

.pov-player-info {
  display: flex;
  align-items: center;
  gap: 12px;
  flex: 1;
}

.pov-avatar {
  position: relative;
  width: 38px;
  height: 38px;
  border-radius: 10px;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.12) 0%,
    rgba(255, 255, 255, 0.04) 100%
  );
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.pov-avatar::before {
  content: '';
  position: absolute;
  inset: 0;
  border: 1px solid rgba(255, 255, 255, 0.15);
  border-radius: inherit;
}

.pov-avatar span {
  font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 15px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.85);
}

.pov-details {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.pov-player-name {
  font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 14px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.95);
}

.pov-player-position {
  font-family: 'SF Pro Text', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 11px;
  color: rgba(255, 255, 255, 0.45);
  text-transform: uppercase;
  letter-spacing: 0.06em;
}

/* Live badge */
.pov-live-badge {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 8px 14px;
  background: linear-gradient(
    135deg,
    rgba(255, 59, 48, 0.2) 0%,
    rgba(255, 59, 48, 0.08) 100%
  );
  border-radius: 20px;
  border: 1px solid rgba(255, 59, 48, 0.3);
}

.pov-live-dot {
  width: 7px;
  height: 7px;
  background: #FF3B30;
  border-radius: 50%;
  box-shadow: 0 0 10px #FF3B30;
  animation: povPulse 1.8s ease-in-out infinite;
}

@keyframes povPulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.5; transform: scale(0.9); }
}

.pov-live-text {
  font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 10px;
  font-weight: 700;
  color: #FF3B30;
  letter-spacing: 0.1em;
}

/* Close button */
.pov-close {
  position: relative;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.08);
  color: rgba(255, 255, 255, 0.6);
  cursor: pointer;
  transition: all 0.3s ease;
}

.pov-close:hover {
  background: rgba(255, 255, 255, 0.15);
  color: rgba(255, 255, 255, 0.9);
}

.pov-close svg {
  width: 16px;
  height: 16px;
}

/* Video section */
.pov-video {
  position: relative;
  aspect-ratio: 16 / 9;
  background: #000;
}

.pov-video-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #080810 0%, #10101a 100%);
}

.pov-video-grid {
  position: absolute;
  inset: 0;
  background-image:
    linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
    linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
  background-size: 20px 20px;
}

.pov-video-text {
  position: relative;
  font-family: 'SF Pro Text', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 11px;
  color: rgba(255, 255, 255, 0.2);
  letter-spacing: 0.15em;
  text-transform: uppercase;
}

/* Stats bar */
.pov-stats {
  position: relative;
  display: flex;
  justify-content: space-around;
  padding: 16px 20px;
  background: rgba(0, 0, 0, 0.3);
}

.pov-stat {
  text-align: center;
}

.pov-stat-value {
  display: block;
  font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 20px;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.95);
  font-variant-numeric: tabular-nums;
}

.pov-stat-label {
  display: block;
  font-family: 'SF Pro Text', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 9px;
  color: rgba(255, 255, 255, 0.4);
  margin-top: 4px;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}
